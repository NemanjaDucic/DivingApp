<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1">
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/line"
            android:layout_marginStart="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Header"
        android:id="@+id/diveTypeTextView"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="New Dive Details"
        android:layout_marginStart="25dp"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diveTypeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dive Report No."
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:textSize="18sp"
                android:id="@+id/divereprtnumTV"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:background="@drawable/et_outline"
                android:layout_marginEnd="10dp"
                android:id="@+id/divereportnumET"
                app:layout_constraintEnd_toStartOf="@id/clientET"
                app:layout_constraintTop_toBottomOf="@id/divereprtnumTV"/>
            <EditText
                android:padding="5dp"

                android:layout_width="0dp"
                android:background="@drawable/et_outline"
                android:layout_marginStart="10dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divereportnumET"
                android:layout_marginEnd="25dp"
                android:id="@+id/clientET"
                app:layout_goneMarginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/divereprtnumTV"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client"
                app:layout_constraintStart_toStartOf="@id/clientET"
                android:textSize="18sp"
                android:id="@+id/clientTV"
                app:layout_constraintTop_toTopOf="parent"/>
            <Spinner
                android:id="@+id/vesselSpinner"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/clientET"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/et_outline"
                android:layout_marginTop="20dp"/>
            <EditText
                android:padding="5dp"

                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableRight="@drawable/notes"
                android:id="@+id/dateET"
                android:layout_marginEnd="25dp"
                android:background="@drawable/et_outline"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/vesselSpinner"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:textSize="18sp"
                android:id="@+id/currentTV"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/dateET"/>
            <EditText
                android:padding="5dp"

                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:background="@drawable/et_outline"
                android:layout_marginEnd="10dp"
                android:id="@+id/currentET"
                app:layout_constraintEnd_toStartOf="@id/swelltET"
                app:layout_constraintTop_toBottomOf="@id/currentTV"/>
            <EditText
                android:padding="5dp"

                android:layout_width="0dp"
                android:background="@drawable/et_outline"
                android:layout_marginStart="10dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divereportnumET"
                android:layout_marginEnd="25dp"
                android:id="@+id/swelltET"
                app:layout_goneMarginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/currentTV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swell"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="@id/clientET"
                android:textSize="18sp"
                android:id="@+id/swellTV"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/dateET"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@+id/currentET"
                android:text="Visibility"
                android:layout_marginBottom="5dp"
                android:id="@+id/visibilityTV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visibilityTV"
                android:id="@+id/visibilityET"
                android:padding="5dp"

                app:layout_constraintEnd_toStartOf="@id/watertempET"
                android:background="@drawable/et_outline"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="10dp"
                android:id="@+id/watertempET"
                android:background="@drawable/et_outline"
                android:layout_marginEnd="25dp"
                android:padding="5dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/visibilityET"
                app:layout_constraintTop_toBottomOf="@id/watertempTV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Temp"
                android:layout_marginBottom="5dp"
                android:id="@+id/watertempTV"
                app:layout_constraintStart_toStartOf="@id/watertempET"
                app:layout_constraintTop_toBottomOf="@id/swelltET"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/visibilityET"
                android:text="Location"
                android:layout_marginBottom="5dp"
                android:id="@+id/locationTV"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationTV"
                android:id="@+id/locationET"
                android:background="@drawable/et_outline"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:padding="5dp"

                android:drawableRight="@drawable/pin"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="330dp"
                android:id="@+id/locationImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationET"
                android:layout_marginTop="20dp"
                android:src="@drawable/proxy"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">
                <com.mapbox.maps.MapView

                    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    mapbox:mapbox_cameraTargetLat="40.7128"
                    mapbox:mapbox_cameraTargetLng="-74.0060"
                    mapbox:mapbox_cameraZoom="9.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:id="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:text="Next"
                app:layout_constraintTop_toBottomOf="@id/locationImage"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/navi_blue_button_bcg"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>