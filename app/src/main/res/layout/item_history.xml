<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/light_gray_bcg">
<TextView
    android:id="@+id/blueTvTop"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    android:textColor="@color/lightBlue"
    android:text="sadsadasdad"/>
    <TextView
        android:id="@+id/dateTV"
        app:layout_constraintTop_toBottomOf="@id/blueTvTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:text="fafsfasf"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_users"
            android:layout_width="24dp"
                android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateTV"
            android:src="@drawable/users"
            android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/users_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/img_users"
                app:layout_constraintTop_toBottomOf="@id/dateTV"
                android:text="usersusers"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/imageview_location"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/pinn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_users"/>
                    <TextView
                        android:id="@+id/text_locations"
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/imageview_location"
                        app:layout_constraintTop_toBottomOf="@id/users_tv"
                        android:layout_height="wrap_content"
                        android:text="sfkankfaklfkalsfs"
                        android:layout_margin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>