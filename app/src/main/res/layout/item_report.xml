<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGray"
    android:layout_height="70dp"
    android:layout_marginTop="8dp">
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/tvTop"
    app:layout_constraintEnd_toStartOf="@id/imgLeft"
    android:text="Document/Table Name"
    android:textAlignment="textStart"
    android:textColor="@color/black"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
   android:layout_marginStart="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/tvBot"/>
<TextView
    android:id="@+id/tvBot"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvTop"
    android:text="#23fsdg Diver name here"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/eye"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:id="@+id/imgRight"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgRight"
        android:layout_marginEnd="10dp"
        android:src="@drawable/download"/>
</androidx.constraintlayout.widget.ConstraintLayout>