<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="0dp"
    android:background="@drawable/navi_blue_button_bcg"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/sortTitle"
    android:layout_marginStart="20dp"
    android:id="@+id/buttonOff"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    android:textSize="12sp"
    android:textColor="@color/white"
    android:text="Offshore Diving Job"
    app:layout_constraintEnd_toStartOf="@id/buttonROV"
    android:layout_height="40dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonROV"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="ROV JOB"
        app:layout_constraintStart_toEndOf="@id/buttonOff"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/navi_blue_button_bcg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/sortTitle"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/sortTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="What kind of job are you offering?"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/pickJobTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonOff"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Please pick Job from List"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/picktagTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jobSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Please pick Job Tags from List"
        android:layout_margin="20dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/jobSpinner"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pickJobTV"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/tagSpinner"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picktagTV"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Create Job Offer"
        android:layout_margin="20dp"/>
  <EditText
      android:layout_width="0dp"
      android:layout_height="200dp"
      android:padding="10dp"
      android:gravity="top"
      android:id="@+id/etDescription"
      android:hint="Please Give us a short job description"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_margin="20dp"
      android:background="@drawable/et_outline"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tagSpinner"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createButton"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Create Job Offer"
        app:layout_constraintStart_toEndOf="@id/buttonOff"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/navi_blue_button_bcg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:gravity="top"
        android:id="@+id/etLink"
        android:hint="Please enter Here your Contact email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/et_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>